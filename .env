# Required for connection
VITE_OPENROUTER_API_KEY=your_api_key
VITE_OPENROUTER_API_URL=https://openrouter.ai/api/v1/chat/completions
VITE_OPENROUTER_API_MODEL=deepseek/deepseek-r1-0528:free


# Optional config
VITE_OPENROUTER_API_TIMEOUT=10000
VITE_OPENROUTER_API_MAX_TOKENS=1000
VITE_OPENROUTER_API_TEMPERATURE=0.7
VITE_OPENROUTER_API_TOP_P=1.0
VITE_OPENROUTER_API_FREQUENCY_PENALTY=0.0
VITE_OPENROUTER_API_PRESENCE_PENALTY=0.0
VITE_OPENROUTER_API_STOP_SEQUENCES=["\n", "User:", "Assistant:"]
VITE_OPENROUTER_API_SYSTEM_PROMPT="You are a helpful assistant. Answer the user's questions concisely and accurately. If the user asks for information that is not available, politely inform them that you cannot provide that information. Always maintain a professional and friendly tone."

# For image input (optional but useful)
NEXT_PUBLIC_OPENROUTER_API_IMAGE_INPUT_ENABLED=true
NEXT_PUBLIC_OPENROUTER_API_IMAGE_INPUT_MAX_SIZE=5242880
NEXT_PUBLIC_OPENROUTER_API_IMAGE_INPUT_FORMATS=["image/png", "image/jpeg", "image/gif"]
NEXT_PUBLIC_OPENROUTER_API_IMAGE_INPUT_RESIZE=true
NEXT_PUBLIC_OPENROUTER_API_IMAGE_INPUT_MAX_DIMENSIONS=1024
NEXT_PUBLIC_OPENROUTER_API_IMAGE_INPUT_QUALITY=85
NEXT_PUBLIC_OPENROUTER_API_IMAGE_INPUT_COLOR_MODE="RGB"
NEXT_PUBLIC_OPENROUTER_API_IMAGE_INPUT_CACHE=true
NEXT_PUBLIC_OPENROUTER_API_IMAGE_INPUT_CACHE_DIR=./image_cache
NEXT_PUBLIC_OPENROUTER_API_IMAGE_INPUT_CACHE_MAX_SIZE=104857600
NEXT_PUBLIC_OPENROUTER_API_IMAGE_INPUT_CACHE_EXPIRATION=604800
NEXT_PUBLIC_OPENROUTER_API_IMAGE_INPUT_CACHE_CLEANUP_INTERVAL=86400
NEXT_PUBLIC_OPENROUTER_API_IMAGE_INPUT_CACHE_MAX_ITEMS=1000
   
